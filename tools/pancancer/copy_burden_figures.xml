<tool id="pancancer_copy_burden_figures" name="PanCancer copy burden figures" version="@VERSION@">
  <description>copy_burden_figures</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <expand macro="stdio"/>
  <version_command0><![CDATA[cd $PANCANCER_DIR && Rscript --vanilla scripts/copy_burden_figures.R --version]]></version_command0>
  <command><![CDATA[
cp -R '$classifier.extra_files_path' '${output_alt_folder.extra_files_path}'

&&

cd \$PANCANCER_DIR && 

Rscript --vanilla scripts/copy_burden_figures.R

--alt_folder '${output_alt_folder.extra_files_path}'

--junctions_with_mutations '$junctions_with_mutations'

&&
@OUTPUT_ALT_FOLDER_HTML@

]]></command>
  <inputs>
    <param argument="--classifier" label="Classifier data" name="classifier" optional="false" type="data" format="html"/>
    <param argument="--junctions_with_mutations" label="SNAPTRON Junctions with mutations" name="junctions_with_mutations" optional="false" type="data" format="csv" help="junctions_with_mutations.csv.gz"/>
  </inputs>
  <outputs>
    <expand macro="output_alt_folder" />
  </outputs>
  <help><![CDATA[TODO: Write help]]></help>
</tool>