<tool id="pancancer_ddr_summary_figures" name="PanCancer DNA Damage Repair/Response " version="@VERSION@">
  <description>Visualize summary</description>
  <macros>
    <import>macros.xml</import>
  </macros>
  <expand macro="requirements"/>
  <expand macro="stdio"/>
  <version_command0><![CDATA[cd $PANCANCER_DIR && Rscript --vanilla scripts/viz/ddr_summary_figures.R --version]]></version_command0>
  <command><![CDATA[
cp -R '$classifier_folder.extra_files_path' '${output_alt_folder.extra_files_path}'
&&

cd \$PANCANCER_DIR && 
Rscript --vanilla scripts/viz/ddr_summary_figures.R

--alt_folder '${output_alt_folder.extra_files_path}'

&&
@OUTPUT_ALT_FOLDER_HTML@

]]></command>
  <inputs>
    <param argument="--classifier_folder" label="Classifier score data" name="classifier_folder" optional="false" type="data" format="html"/>
  </inputs>
  <outputs>
    <expand macro="output_alt_folder" />
  </outputs>
  <help><![CDATA[TODO: Write help]]></help>
</tool>